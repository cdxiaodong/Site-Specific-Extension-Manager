{
    "manifest_version": 3,
    "name": "Site-Specific Extension Manager",
    "version": "1.0",
    "description": "Disables all extensions except itself on specified websites.",
    "permissions": [
      "management",
      "storage",
      "tabs",
      "webNavigation"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
  